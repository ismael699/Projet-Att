{% extends 'base.html.twig' %}

{% block title %}réinitialiser votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="center-form">
        <div class="form-user">
            <div class="img-form">
                <img src="{{ asset('images/logo-entreprise.jpg') }}" alt="Image du logo de l'entreprise.">
            </div>
            <div>
                <h1>Mot de passe oublié ?</h1>
                <div class="form-label-input margin-top-20">
                    {{ form_start(requestForm) }}

                    <div class="form-group">
                        <label for="">Adresse email</label>
                        {{ form_widget(requestForm.email) }}
                    </div>
    
                    <div>
                        <small>
                            Entrez votre adresse e-mail et nous vous enverrons un
                            lien pour réinitialiser votre mot de passe.
                        </small>
                    </div>
    
                    <div class="margin-top-20">
                        <button type="submit" id="submit-button" class="btn-new">Envoyer</button>
                    </div>
                    
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </div>    
        
{% endblock %}
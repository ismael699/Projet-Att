{% extends 'base.html.twig' %}

{% block body %}
<div class="center-form">
    <div class="form-user">
        <div class="icon-svg-form margin-top-40">
            <a href="{{ path('app.home') }}">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 9-3 3m0 0 3 3m-3-3h7.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" /></svg>  
            </a>                        
        </div>
        <div class="img-form">
            <img src="{{ asset('images/logo-entreprise.jpg') }}" alt="Image du logo de l'entreprise.">
        </div>
        <div>
            <h1>Inscrivez-vous</h1>
            <div class="form-label-input margin-top-20">
                {{ form_start(form) }}

                <div class="choice-roles">
                    {{ form_row(form.roles) }} 
                </div>

                <div class="form-group">
                    <label for="">Adresse email</label>
                    {{ form_widget(form.email) }}
                </div>

                <div class="form-group">
                    <label for="">Mot de passe</label>
                    {{ form_widget(form.password.first) }}
                </div>

                <div class="form-group">
                    <label for="">Confirmation mot de passe</label>
                    {{ form_widget(form.password.second) }}
                </div>

                <div class="form-group">
                    <label for="">Numéro de Siren</label>
                    {{ form_widget(form.siren) }}
                </div>

                <div class="form-group file-input-container">
                    <label for="{{ form.file.vars.id }}" class="file-label">Veuillez télécharger votre K-bis en PDF</label>
                    {{ form_widget(form.file) }}
                </div>

                <div class="margin-top-20">
                    <button type="submit" class="btn-new">Suivant</button>
                </div>
                
            {{ form_end(form) }}
            </div>

            <div class="text-center margin-top-40 form-little-line">
                <p>Déjà inscrit(e) ? <a href="{{ path('app.login') }}">Se connecter</a></p> 
            </div>

        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="center-form">
    <div class="form-user">
        <div class="img-form">
            <a href="{{ path('app.home') }}"><img src="{{ asset('images/logo-png.png') }}" alt="Image du logo de l'entreprise." class="img-pages-infos" id="anim-img-login"></a>
        </div>
        <div>
            <div id="anim-form-login">
            <h1 id="anim-title-login">Connectez-vous</h1>
            <form action="{{ path('app.login') }}" method="post" class="form-label-input margin-top-20">
                <div class="form-group">
                    <label for="#">Adresse email <span class="little-star">*</span></label>
                    <input type="email" id="email" name="_username" value="{{ last_email }}" required autofocus placeholder="email@gmail.com">
                </div>
                <div class="form-group">
                    <label for="#">Mot de passe <span class="little-star">*</span></label>
                    <input type="password" id="password" name="_password" required placeholder="Entrez votre mot de passe">
                </div>
                <div>
                    <a href="{{ path('app.forgot.password') }}" class="f-size-13" id="mdp-oublie">Mot de passe oubli√© ?</a>
                </div>
            </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <div class="margin-top-20" id="anim-btn-login">
                    <button type="submit" class="btn-new">Connexion</button>
                </div>
            </form>
            <div class="text-center margin-top-40 form-little-line" id="anim-btn-login">
                <p>Vous n'avez pas de compte ? <a href="{{ path('app.register') }}">Inscrivez-vous</a></p> 
            </div>
        </div>
    </div>
</div>
{% endblock %}
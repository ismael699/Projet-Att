{% extends 'base.html.twig' %}

{% block title %}Hello AnnonceController!{% endblock %}

{% block body %}

{% include "Layout/nav.html.twig" %}

    {% if annonces is not empty %}
    {% for annonce in annonces %}
    <div class="card">
        <div class="d-flex">
            <div class="card-left flex-card-1 left-between">
                <div class="flex-card-1">
                    {% if annonce.chauffeur.userInfos.photoName %}
                        <img src="/images/photo/{{ annonce.chauffeur.userInfos.photoName }}" alt="Photo chauffeur.">
                    {% endif %}
                    <div id="card-title">
                        <h2>{{ annonce.title }}</h2>
                        <strong>{{ annonce.date|date('d/m/Y') }}</strong>
                    </div>
                </div>
                <div>
                    <a href="#" class="btn-contact" id="contact-none-2">Message</a>
                </div>
            </div>
            <div class="card-right flex-card-2">
                <p class="svg-container">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6"><path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" /><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" /></svg>
                    <strong>{{ annonce.LieuDepart }}</strong>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6"><path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" /></svg>                  
                    <strong>{{ annonce.LieuArrivee}}</strong>
                </p>
            </div>
        </div>
    </div>
    {% endfor %}
    {% endif %}

{% endblock %}

<div class="center-form">
    <div class="form-user">
        <div class="icon-svg-form margin-top-40">
            <a href="{{ path('app.annonce.index') }}">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 9-3 3m0 0 3 3m-3-3h7.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" /></svg>  
            </a>                       
        </div>
        <div class="img-form">
            <img src="{{ asset('images/logo-entreprise.jpg') }}" alt="Image du logo de l'entreprise.">
        </div>
        <div>
            <h1>Annonce</h1>
            <div class="form-label-input margin-top-20">
                {{ form_start(form) }}
                <div class="form-group">
                    <label for="">Titre de l'annonce *</label>
                    {{ form_widget(form.title) }}
                </div>
                <div class="form-group">
                    <label for="date">Date *</label>
                    {{ form_widget(form.date) }}
                </div>
                <div class="form-group">
                    <label for="">Lieu de départ *</label>
                    {{ form_widget(form.lieu_depart) }}
                </div>
                <div class="form-group">
                    <label for="">Lieu d'arrivée *</label>
                    {{ form_widget(form.lieu_arrivee) }}
                </div>
                <div class="form-group">
                    <label for="">Description *</label>
                    {{ form_widget(form.description) }}
                </div>
                <div class="form-group">
                    <label for="">Quels service proposez-vous *</label>
                    {{ form_widget(form.service) }}
                </div>
                <div class="margin-top-20 margin-bottom-50">
                    <button type="submit" class="btn-new">Mettre en ligne</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
    
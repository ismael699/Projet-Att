{% extends 'base.html.twig' %}

{% block title %}Annonces en ligne{% endblock %}

{% block body %}
    {% include "Layout/nav.html.twig" %}
    {% include "Backend/Annonce/_formSearch.html.twig" %}

    <div class="margin-top-40">
        <a href="{{ path('app.annonce.index') }}">Supprimer la recherche</a>
    </div>  

    <section class="annonce-group margin-top-20">
        <div class="annonce-user">

            {% for annonce in annonces %}
            <div class="annonce-container">
            <div class="d-flex">
                <div id="annonce-img-chauffeur">
                    <img <img src="{{ asset('images/photo/' ~ annonce.chauffeur.userInfos.photoName) }}" alt="Photo du chauffeur.">
                </div>
                <div id="annonce-lieu-travel">
                    <div>
                        <p class="annonce-depart-arrivee">Départ</p>
                        <div class="d-flex annonce-icon-svg">
                            <p>{{ annonce.lieuDepart.name }}</p>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" /></svg>                              
                        </div>                          
                    </div>  
                    <div>
                        <p class="annonce-depart-arrivee">Arrivée</p>
                        <div class="d-flex annonce-icon-svg">
                            <p>{{ annonce.lieuArrivee.name }}</p>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 15.75 3 12m0 0 3.75-3.75M3 12h18" /></svg>                                                          
                        </div>
                    </div> 
                </div>
            </div>   
            <div class="annonce-date-msg d-flex">
                <div class="d-flex annonce-date-center">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5m-9-6h.008v.008H12v-.008ZM12 15h.008v.008H12V15Zm0 2.25h.008v.008H12v-.008ZM9.75 15h.008v.008H9.75V15Zm0 2.25h.008v.008H9.75v-.008ZM7.5 15h.008v.008H7.5V15Zm0 2.25h.008v.008H7.5v-.008Zm6.75-4.5h.008v.008h-.008v-.008Zm0 2.25h.008v.008h-.008V15Zm0 2.25h.008v.008h-.008v-.008Zm2.25-4.5h.008v.008H16.5v-.008Zm0 2.25h.008v.008H16.5V15Z" /></svg>                      
                    <p>{{ annonce.date|date('d/m/Y') }}</p>
                </div>
                    
                <svg id="annonce-svg-msg" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 8.511c.884.284 1.5 1.128 1.5 2.097v4.286c0 1.136-.847 2.1-1.98 2.193-.34.027-.68.052-1.02.072v3.091l-3-3c-1.354 0-2.694-.055-4.02-.163a2.115 2.115 0 0 1-.825-.242m9.345-8.334a2.126 2.126 0 0 0-.476-.095 48.64 48.64 0 0 0-8.048 0c-1.131.094-1.976 1.057-1.976 2.192v4.286c0 .837.46 1.58 1.155 1.951m9.345-8.334V6.637c0-1.621-1.152-3.026-2.76-3.235A48.455 48.455 0 0 0 11.25 3c-2.115 0-4.198.137-6.24.402-1.608.209-2.76 1.614-2.76 3.235v6.226c0 1.621 1.152 3.026 2.76 3.235.577.075 1.157.14 1.74.194V21l4.155-4.155" /></svg>                  
            </div>

            </div>
            {% endfor %}

        </div>
    </section>
{% endblock %}


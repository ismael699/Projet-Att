{% extends 'base.html.twig' %}

{% block title %}Modification de mes informations{% endblock %}

{% block body %}
    <div class="center-form">
        <div class="form-user">
            <div class="icon-svg-form margin-top-40">
                <a href="{{ path('app.profile.index') }}">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 9-3 3m0 0 3 3m-3-3h7.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" /></svg>  
                </a>                        
            </div>
            <div class="img-form">
                <img src="{{ asset('images/logo-entreprise.jpg') }}" alt="Image du logo de l'entreprise.">
            </div>
            <div>
                <h1>Modification</h1>
                <div class="form-label-input margin-top-20">
                    {{ form_start(form) }}
                    <div class="form-group">
                        <label for="">Adresse email</label>
                        {{ form_widget(form.email) }}
                    </div>
                    <div class="form-group">
                        <label for="">Mot de passe</label>
                        {{ form_widget(form.password.first) }}
                    </div>   
                    <div class="form-group">
                        <label for="">Confirmation mot de passe</label>
                        {{ form_widget(form.password.second) }}
                    </div>
                    <div class="margin-top-20">
                        <button type="submit" class="btn-new">Mettre Ã  jour</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
{% endblock %}
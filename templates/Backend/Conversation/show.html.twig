{% extends 'base.html.twig' %}

{% block title %}Annonces{% endblock %}

{% block body %}
    <h1>Conversation avec {{ conversation.creator.name }}</h1>
    
    <div>
        {# Affichage de chaque message de la conversation #}
        {% for message in conversation.messages %}
            <div>
                <strong>{{ message.sender.name }}:</strong> {{ message.content }}  {# Affiche le nom de l'utilisateur et le contenu du message #}
                <em>{{ message.createdAt|date('Y-m-d H:i') }}</em>  {# Affiche la date de cr√©ation du message #}
            </div>
        {% endfor %}
    </div>

    {# Formulaire pour envoyer un nouveau message #}
    <form method="post" action="{{ path('app.conversation.send', {'id': conversation.id}) }}">
        <textarea name="content" required></textarea>  {# Zone de texte pour saisir le message #}
        <button type="submit">Envoyer</button>  {# Bouton pour envoyer le message #}
    </form>
{% endblock %}